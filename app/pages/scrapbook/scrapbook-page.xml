<Page 
    xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar icon="" class="action-bar" hasShadow="false">
            <Label text="Scrapbook"/>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto">
        <ScrollView>
        <Label class="" text="Here there will be a list of scrappages" row="0" verticalAlignment="center"/>
        </ScrollView>
        <StackLayout  row="1">
            <FlexboxLayout class="bottom-navigation">
                <Label class="button-right" text="back" tap="backTap"/>
                <Label class="button-left add" text="add" tap="addNew"/>
            </FlexboxLayout>
        </StackLayout>
    </GridLayout>
</Page>
